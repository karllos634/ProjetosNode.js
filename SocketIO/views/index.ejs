<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<style>
    #chat{
        max-height: 500px;
        min-height: 500px;
        background-color: rgb(186, 215, 240);
        overflow-y: scroll;
    }
</style>
<body>
    <h1>Chat do Guia</h1>
    <div id="chat">
    
    </div><br>
    <input type="text" name="" id="msg" class="form-control" placeholder="msg...">
    <input type="text" name="" id="username" placeholder="Seu nome de usuÃ¡rio" class="form-control"><br>
    <button onclick="enviar()"  class="btn btn-success btn-lg btn-block">Enviar</button>
</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.2.0/socket.io.js"></script>
<script>
    var socket = io("http://localhost:3000");

    socket.on("disconnect", () => {
        console.log("Desconectado");
    });

    socket.on("showmsg", (data) => {
        console.log(data);
        var chat = document.getElementById("chat");
        var p = document.createElement("p");
        p.innerHTML = data.username + ": " + data.msg;
        chat.append(p);
    });

        function enviar(){
           var msgField = document.getElementById("msg");
           var userNameField = document.getElementById("username");

           var msg = msgField.value;
           var username = userNameField.value;

           socket.emit("msg",{msg: msg, username: username});
        };
    
</script>
</html>